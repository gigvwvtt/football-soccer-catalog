@model IEnumerable<string>
@{
    ViewData["Title"] = "Добавление футболиста";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="w-50">
         <form class="mt-3" method="post" action="Add"> 
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="name" name="name" placeholder="name">
                <label for="name">Имя</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="surname" name="surname" placeholder="surname">
                <label for="surname">Фамилия</label>
            </div>

            <div class="form-floating mb-3">
                <select class="form-select" id="sex" name="sex">
                    <option disabled selected></option>
                    <option>мужской</option>
                    <option>женский</option>
                </select>
                <label for="sex">Пол</label>
            </div>

            <div class="form-floating mb-3">
                <input type="date" class="form-control" id="date" name="date" placeholder="date">
                <label for="date">Дата рождения</label>
            </div>

            <div class="form-floating mb-3">
                <input class="form-control" list="datalistOptions" id="team" name="team" placeholder="Введите название команды для поиска...">
                <datalist id="datalistOptions">
                    @foreach (var country in Model)
                    {
                        <option>@country</option>
                    }
                </datalist>
                <label for="team">Название команды</label>
            </div>

            <div class="form-floating mb-3">
                <select class="form-select" id="country" name="country">
                    <option disabled selected></option>
                    <option>Россия</option>
                    <option>США</option>
                    <option>Италия</option>
                </select>
                <label for="country">Страна</label>
            </div>

             <button type="submit" class="btn btn-primary" onclick="return DisplayProgressMessage(this, 'Сохранение...');">Создать</button>
        </form>
    </div>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script type="text/javascript">
          function DisplayProgressMessage(ctl, msg){
          event.preventDefault();
          $(ctl).prop("disabled", true).text(msg);
          $(".submit-progress").removeClass("hidden");
          setTimeout(function (){
              $("form").submit()
              }, 1);
          return true;
          }
    </script>
}